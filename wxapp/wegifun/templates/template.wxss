.dorm-info {
  flex: auto;
  align-items: center;
  justify-content: space-between;
}

.dorm-info text {
  vertical-align: middle;
}

.dorm-info .content {
  font-size: 48rpx;
}

.dorm-info .tip {
  font-size: 26rpx;
}

.dorm-info .tip.green {
  color: #46c01b;
}

.dorm-info .tip.red {
  color: #e64340;
}

.dorm-info.weui-select {
  line-height: inherit;
  height: inherit;
  min-height: inherit;
  padding-left: 0;
  border-right: none;
}
